{
  "name": "Learn More",
  "settings": [
    {
      "id":"heading2",
      "type":"text",
      "label":"Main Title"
    },
    {
     "id":"desc",
      "type":"text",
      "label":"Description"
    },
    {
      "id":"learn-btn",
      "type":"text",
      "label":"Button Text"
    },
    {
      "id":"url",
      "type":"url",
      "label":"Learn More"
    }
  ],
  "presets": [
  {
    "name": "Learn More"
  }
]
}
{% endschema %}

