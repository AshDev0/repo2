<section class="learn-more">
  <div class="main-container">
    <div class="content">
      <h2>{{ section.settings.heading2 }}</h2>
      <p>{{ section.settings.desc }}</p>
      <a href="{{ section.settings.url }}">{{ section.settings['learn-btn'] }}</a>
    </div>
  </div>
</section>
