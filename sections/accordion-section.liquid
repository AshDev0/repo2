<section class="accordion">
  <div class="main-container">
    <div class="img-container">
      <img src="{{product.metafields.Acc_Image.single_img}}" alt="">
    </div>
    <div class="text-contianer">
      <h2>{{ product.metafields.main_head.main_head }}</h2>
      {% assign info = product.metafields.acc_info.heading %}

      <div class="accordion-content">
        {% for value in info %}
          <div class="accordion-content-item">
            <div class="accordion-content-head" data-acc="{{ info }}">
              <h3>
                {{ value }}
              </h3>
            </div>
            <div class="accordion-content-text" data-acc="1">
              <p>{{ product.metafields.acc_info.acc_desc[forloop.index0] }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Accordion Section",
  "settings": [],
  "presets": [
    {
      "name": "Accordion Section"
    }
  ]
}
{% endschema %}
